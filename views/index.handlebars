<h1>eatah burgah</h1>

<main>
   <div class="container">
      <div class="row">
         <div class="col s6">
            {{#each burgers}}
               {{#unless this.devoured}}
                  <div id="divForm">
                     <form action="/burgers/{{this.id}}?_method=PUT" method="POST">
                        <button type="submit" class="burgerAvailable"> {{this.burger_name}}</button>
                     </form>   
                  </div>
               {{/unless}}
            {{/each}}
         </div>

      <div class="col s6">
        {{#each burgers}}
          {{#if this.devoured}}
            <div class='burgerEaten'>
              <div>
                {{this.burger_name}}
              </div>
            </div>
          {{/if}}
        {{/each}}
      </div>

    </div>
  
   </div>
</main>

<h2>Add a Burger</h2>
   <div class="row">
      <div class="col s12">
         <form>
            <input type="text" id="burger_name" name="Burger" placeholder="Add a burger">
            <button id="submitButton" class="addBurgerButton">Add a burger</button>
         </form>
      </div>
   </div>